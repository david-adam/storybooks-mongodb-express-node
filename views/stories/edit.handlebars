<h1>Edit Story</h1>
<div class="row">
  <form action="/stories/{{story.id}}?_method=PUT" method="post" class="col s12">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <input type="text" name="title" value="{{story.title}}">
      <label for="title">Title</label>
    </div>
    <div class="row">
      <select name="status">
        {{#select story.status}}
        <option value="public">Public</option>
        <option value="private">Private</option>
        <option value="unpublished">Unpublished</option>
        {{/select}}
      </select>
      <label for="status">Status</label>
    </div>
    <div class="row">
      <p>
        <label>
          <input name="allowComments" type="checkbox" class="filled-in" {{#if story.allowComments}} checked="checked" {{/if}} />
          <span>Allow Comments</span>
        </label>
      </p>
    </div>
    <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story:</h5>
        <textarea name="body">{{story.body}}</textarea>
      </div>
    </div>
    <input type="submit" value="Save" class="btn">
  </form>
</div>
